<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersCommon.EditProfile"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id="@+id/profileImage"
            android:src="@drawable/codee"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_edit"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_gender"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DOB"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:fontFamily="@font/aldrich"
                android:focusable="false"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_dob"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_age"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Country">

            <AutoCompleteTextView
                android:id="@+id/ProfileCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:textColorHint="#000"
                android:fontFamily="@font/aldrich"
                android:inputType="textCapWords|text"
                android:drawableStart="@drawable/ic_country"
                android:drawablePadding="5dp"
                android:paddingStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City/Town"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:inputType="textCapWords"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_city"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coding Languages Known"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileCodingL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:inputType="textCapWords"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_code"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Currently Interested In"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:inputType="textCapWords"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_current"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GitHub Link "
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileGitHub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_link"
                android:text="GitHub Link Not Added"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:helperText="Student, Job, Intern, Idle"
            android:hint="Current Status">

            <AutoCompleteTextView
                android:id="@+id/ProfileCurrentS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:textColorHint="#000"
                android:inputType="textCapWords|text"
                android:drawableStart="@drawable/ic_status"
                android:drawablePadding="5dp"
                android:fontFamily="@font/aldrich"
                android:text="Current Status Not Added"
                android:paddingStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="School"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileSchool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_school"
                android:text="School Info Not Added"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="College"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:paddingBottom="10dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ProfileCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aldrich"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_college"
                android:text="College Info Not Added"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/Confirm"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:fontFamily="@font/aldrich"
            android:background="#000"
            android:text="Confirm"/>
    </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersCommon.EmailVerification"
    android:orientation="vertical"
    android:background="#fece2f"
    android:padding="20dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/codee"
        android:transitionName="logo_image"
        android:layout_gravity="center"/>
    <TextView
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="EMAIL VERIFICATION LINK HAS BEEN SENT TO YOUR REGISTERED EMAIL ADDRESS, VERIFY YOUR EMAIL ADDRESS TO ACCESS THE APPLICATION"
        android:fontFamily="@font/aldrich"/>
    <TextView
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:textSize="25sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="CLICK THE BUTTON BELOW TO RESEND THE EMAIL VERIFICATION"/>
    <Button
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="SEND EMAIL VERIFICATION"
        android:textColor="#FFF"
        android:background="#000"
        android:fontFamily="@font/aldrich"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
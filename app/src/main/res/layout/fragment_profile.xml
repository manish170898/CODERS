<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="20sp"
            android:background="@drawable/a_layer">
                <androidx.cardview.widget.CardView
                    android:id="@+id/myCardView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:id="@+id/profileImage"
                            android:src="@drawable/codee"
                            android:layout_centerVertical="true"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/myCardView"
                    android:fontFamily="@font/aldrich"
                    android:includeFontPadding="false"
                    android:inputType="textCapWords"
                    android:textColor="#000000"
                    android:text="Name"
                    android:textSize="25sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="-80dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/CardEdit"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#fece2f"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                                <ImageView
                                    android:id="@+id/edit_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/a"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:id="@+id/Edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/edit_icon"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/aldrich"
                                    android:includeFontPadding="false"
                                    android:paddingTop="10dp"
                                    android:text="Edit Info"
                                    android:textSize="18sp" />
                        </RelativeLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/CardSettings"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#fece2f"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">
                                <ImageView
                                    android:id="@+id/settings_icon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/b"
                                    android:layout_centerHorizontal="true"/>

                                <TextView
                                    android:id="@+id/Settings"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/settings_icon"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/aldrich"
                                    android:includeFontPadding="false"
                                    android:paddingTop="10dp"
                                    android:text="Settings"
                                    android:textSize="18sp" />
                        </RelativeLayout>

                </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileGender"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:fontFamily="@font/aldrich"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_gender"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DOB"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileDob"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:fontFamily="@font/aldrich"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_dob"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileAge"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/aldrich"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_age"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileCountry"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:inputType="textCapWords"
                            android:focusable="false"
                            android:fontFamily="@font/aldrich"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_country"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City/Town"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileState"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/aldrich"
                            android:clickable="false"
                            android:inputType="textCapWords"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_city"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Coding Languages Known"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileCodingL"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:fontFamily="@font/aldrich"
                            android:cursorVisible="false"
                            android:inputType="textCapWords"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_code"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Currently Interested In"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileInterest"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:fontFamily="@font/aldrich"
                            android:focusableInTouchMode="false"
                            android:background="@null"
                            android:inputType="textCapWords"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_current"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="GitHub Link "
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileGitHub"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:fontFamily="@font/aldrich"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_link"
                            android:text="GitHub Link Not Added"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Current Status"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileCurrentS"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/aldrich"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_status"
                            android:text="Current Status Not Added"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="School"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileSchool"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/aldrich"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_school"
                            android:text="School Info Not Added"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="College"
                    android:paddingBottom="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ProfileCollege"
                            android:layout_width="match_parent"
                            android:editable="false"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/aldrich"
                            android:background="@null"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_college"
                            android:text="College Info Not Added"/>
                </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
        </LinearLayout>
</ScrollView>